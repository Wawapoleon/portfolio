<script is:inline>
  // Flèche 1

  window.addEventListener("scroll", () => {
    // Si la position de la page est en haut, la flèche doit être tournée vers le bas
    if (window.pageYOffset < 200) {
      arrow.classList.remove("opacity-0");
    }
    // Sinon, la flèche doit être tournée vers le haut
    else {
      arrow.classList.add("opacity-0");
    }
  });

  arrow.addEventListener("click", () => {
    // On scrolle vers le haut si la flèche est tournée vers le haut
    if (arrow.classList.contains("opacity-0")) {
      null;
    }
    // Sinon, on scrolle vers le bas
    else {
      window.scrollTo({
        top: 540,
        behavior: "smooth",
      });
    }
  });
</script>
